#call the libraries
import numpy as np
import matplotlib.pyplot as plt
import wave
import sys
import IPython
import librosa
import librosa.display
import scipy.io.wavfile

#Show Audio file
IPython.display.Audio('what_are_you_doing.wav')

#Display the length of the audio array and sample rate, check the shape of data before plotting.
x, sr = librosa.load('what_are_you_doing.wav')
print(x.shape)
print(sr)

#visualizing audio, Plot the audio array using
%matplotlib inline
plt.figure(figsize=(14, 5))
librosa.display.waveplot(x, sr=sr)

#Display a spectrogram using librosa 
X = librosa.stft(x)
Xdb = librosa.amplitude_to_db(abs(X))
plt.figure(figsize=(14, 5))
librosa.display.specshow(Xdb, sr=sr, x_axis='time', y_axis='hz')
